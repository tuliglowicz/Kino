<%= form_for(@seat) do |f| %>
  <% if @seat.errors.any? %>
    <div id="error_explanation">
      <h2>Zaszły następujące nieprawidłowości:</h2>

      <ul>
      <% @seat.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :"Id Sali" %><br />
    <%= f.text_field :room_id , :value => 10 %>
  </div>
  <div class="field">
    <%= f.label :Rząd %><br />
    <%= f.text_field :row %>
  </div>
  <div class="field">
    <%= f.label :Kolumna %><br />
    <%= f.text_field :collumn %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
