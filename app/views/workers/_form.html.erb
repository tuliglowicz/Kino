<%= form_for(@worker) do |f| %>
  <% if @worker.errors.any? %>
    <div id="error_explanation">
      <h2>Zaszły następujące nieprawidłowości:</h2>

      <ul>
      <% @worker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cinema_id %><br />
    <% if @cinemas.size > 1-%>
      <%= select_tag('worker[cinema_id]', options_for_select([['Wybierz kino', '']] + @cinemas.collect{|c| [c.name, c.id]}, @worker.cinema_id)) %>
    <% else if -%>
      <%= select_tag('worker[cinema_id]', options_for_select(@cinemas.collect{|c| [c.name, c.id]}, @worker.cinema_id)) %>
    <% else -%>
    <%= f.text_field :cinema_id %>
    <% end end -%>
  </div>
  <div class="field">
    <%= f.label :status_id %><br />
    <% if @statuses -%>
    <%= select_tag('worker[status_id]', options_for_select([['Wybierz status', '']] + @statuses.collect{|s| [s.name, s.id]}, @worker.status_id)) %>
    <% else -%>
    <%= f.text_field :status_id %>
    <% end -%>
  </div>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
