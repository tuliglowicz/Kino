<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2>Zaszły następujące nieprawidłowości:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
<% end %>

 <div id="h_container">   
    <div id="form-container">
<form align="left" class="new_category" id="new_category" method="post" action="/categories/create">
		<table >
						
			<tr>
				<td class="label"><label for="category_name">Nazwa kategorii:</label></td>
				<td class="input"><textarea style="width: 195px"  style="width: 200px" 
					type="text" id="category_name" name="category[name]" class="validate[required] text-input"><%= @category.name %></textarea></td>
			</tr>
						
		</table>	
		<br />
		<button type="submit">Zapisz</button>
	</form>

</div>
</div>
