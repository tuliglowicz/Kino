<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2>Zaszły następujące nieprawidłowości:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"Nazwa kategori" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "Zapisz"%>
  </div>
<% end %>
<script>
$("document").ready(function(){$('#category_name').focus();});
</script>