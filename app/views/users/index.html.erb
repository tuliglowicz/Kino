<h1>Lista użytkowników</h1>

<%= link_to 'Dodaj', new_user_path %><br><br>
<table>
  <tr>
    <th>Id</th>
    <th>Login</th>
    <th>Hasło</th>
    <th>E-mail</th>
    <th>Imie</th>
    <th>Nazwisko</th>
    <th>Telefon</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.login %></td>
    <td><%= "*Hidden*" if user.hashed_password %></td>
    <td><%= user.email %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.phone %></td>
    <td><%= link_to 'Pokaż', user %>
    	<%= link_to 'Edytuj', edit_user_path(user) %>
    	<%= link_to 'Usuń', user, :confirm => 'Czy na pewno chcesz usunąć ten rekord?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

