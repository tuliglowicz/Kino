<script src="/javascripts/jquery-1.6.2.min.js" type="text/javascript" charset="utf-8"></script>
<script src="/javascripts/jyoutube.js" type="text/javascript" charset="utf-8"></script>
<script src="/javascripts/jyoutube.min.js" type="text/javascript" charset="utf-8"></script>

<link href="/stylesheets/pagination.css?1320267656" media="screen" rel="stylesheet" type="text/css" />
<h1>Lista filmów </h1>

<br />
<%= (link_to 'Dodaj nowy film', new_film_path) %><br><br>

<% if @films.count == 0%>

	<p class="no_films"> Nie dodano jeszcze żadnego filmu. </p>

<% else %>
<br><br>
<table id="listaRekordow" cellspacing=0 cellpadding=5px>
  <tr>
  	<th>Nr</th>
    <th>Tytuł</th>
    <th>Reżyser</th>
    <th>Rok</th>
    <th>Kategoria</th>
    <th>Trailer</th>
    <th>Czas [min]</th>
    <th>Opis</th>
    <th>Plakat</th>
    <th></th>
  </tr>
<% i = 0 %>

<% @films.each do |film| %>

<script type="text/javascript">
		
					$(document).ready(function(){
						    $('#thumbs<%= i %>').append($('<a href="<%= film.trailer %>"><img src="'+$.jYoutube('<%= film.trailer %>', 'small')+'" /></a>'));
					});
</script>

	
  <tr>
  	<td><%= film.ordinal_number %></td>
  	<td width=70px align=center><%= trim(film.title, 2) %></td>
    <td><%= film.director %></td>
    <td width=50px align=center><%= film.year %></td>
    <td><%= film.category.name if film.category %></td>
    <td id="thumbs<%= i %>" width=150px align="center" >  </td>
    <% i = i +1 %>
    <td align=center><%= film.length %></td>
    <td><i><%= trim(film.description, 11) %></i></td>
    <td><img src="/images/film_posters<%= film.poster %>" alt="Tekst alternatywny" width="65" /></td>
    <td width=3%><%= link_to 'Pokaż', film %>
    	<%# if session[:isGA] -%>
    	<%= link_to 'Edytuj', edit_film_path(film) %>
    	<%= link_to 'Usuń', film, :confirm => 'Czy na pewno chcesz usunąć ten rekord?', :method => :delete %></td>
    	<%# end -%>
	</td>
  </tr>
<% end %>
</table>
<% end%>

<br></br>	 
	<%= will_paginate @films,  { :previous_label => 'Wstecz', :next_label => 'Dalej' } %>
	
<br />

