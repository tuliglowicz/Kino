<% # encoding: UTF-8 %>
<!DOCTYPE html>
<html>
<head>
<META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8"/>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>   
  <%= javascript_include_tag "jquery-1.5.2.min.js" %>
  <%= javascript_include_tag "jscript.js" %>
  <%= javascript_include_tag "javascript.js" %>
  <%= javascript_include_tag "jscript.js" %>
  <%= javascript_include_tag "bannerRotator.js" %>
  <%= javascript_include_tag "sliderotator.js" %>
  <%= javascript_include_tag "jqueryy.js" %>
  <%= javascript_include_tag "easySlider1.7.js" %>
  <%= javascript_include_tag "screenrotator.js" %>
  <%= javascript_include_tag "dynamic_states.js" %>
  
  
  <%= csrf_meta_tag %>
  <title><%= @title+" - " if @title %>Interplex</title>
 
  
</head>

<BODY LEFTMARGIN="0" bgcolor="gray" RIGHTMARGIN="0" TOPMARGIN="0" BOTTOMMARGIN="0" MARGINWIDTH="0" MARGINHEIGHT="0">

<div id="header"></div>


<!-- Gorny Pasek -->

<center><div id="logo">

</div></center>
<center><div id="gornyPasek">

<ul>
    <li><a href="http://localhost:3000/"><span>Home</span></a></li>
    <li><a href="/public/kina"><span>Kina</span></a></li>
    <li><a href="/public/repertuar"><span>Repertuar</span></a></li>
