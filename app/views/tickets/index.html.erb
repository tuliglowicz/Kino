
<LINK REL=StyleSheet HREF="/stylesheets/tickets/tickets.css" TYPE="text/css" MEDIA=screen>


<h1>Bilety</h1>
<br />
<%= (link_to 'Dodaj nowy bilet', new_ticket_path) %><br><br>

<% if @tickets.count == 0%>

	<p class="no_tickets"> Nie dodano jeszcze żadnego kina. </p>

<% else %>
<table>
  <tr>
    <th>Seans</th>
    <th>Miejsce</th>
    <th>Użytkownik</th>
    <th>Anulowany</th>
    <th>Rezerwacja</th>
    <th>Cena</th>
    <th>Pracownik</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.seance_id %></td>
    <td><%= ticket.seat_id %></td>
    <td><%= ticket.user_id %></td>
    <td><%= ticket.cancelled %></td>
    <td><%= ticket.reservation_id %></td>
    <td><%= ticket.price %></td>
    <td><%= ticket.worker_id %></td>
    <td><%= link_to 'Pokaż', ticket %></td>
    <td><%= link_to 'Edytuj', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Usuń', ticket, :confirm => 'Czy napewno chcesz usunąć bilet?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<% end%>
	
<br />

