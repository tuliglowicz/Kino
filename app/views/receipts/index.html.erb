<h1>Listing receipts</h1>

<table>
  <tr>
    <th>Reservation</th>
    <th>Sum</th>
    <th>Worker</th>
    <th>Date</th>
    <th>Cash register</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @receipts.each do |receipt| %>
  <tr>
    <td><%= receipt.reservation_id %></td>
    <td><%= receipt.sum %></td>
    <td><%= receipt.worker_id %></td>
    <td><%= receipt.date %></td>
    <td><%= receipt.cash_register %></td>
    <td><%= link_to 'Show', receipt %></td>
    <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
    <td><%= link_to 'Destroy', receipt, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

