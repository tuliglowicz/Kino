    jQuery("#new_category").validationEngine('attach', {bindMethod:"live"});
    
    jQuery("#cinema_city_id").live('click', handleOnContextMenu)
    
    function handleOnContextMenu(event)
    {
    	
    }
  });
</script>

<LINK REL=StyleSheet HREF="/stylesheets/categories/categories_form.css" TYPE="text/css" MEDIA=screen>
